<!DOCTYPE html>
<html>
    <head>
        <% include partials/head %>
    </head>
    <body>
        <!-- preset form values if we receive a userdata object //-->
        <% user = typeof(udata) != 'undefined' ? udata : { }; %>

        <!-- store the userId on the client side in a hidden input field //-->
        <input type="hidden" id="userId" value="user._id" />

        <div class="center-vertical" id="account-form-container">
            <form class="card card-body bg-light" method="post" id="account-form">
                <h2>Cadastre-se</h2>
                <h6 id="sub">Preencha alguns detalhes sobre você</h6>
                <hr/>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label col-form-label-sm">Nome</label>
                    <div class="col-sm-9"><input class="form-control" id="name-tf" type="text" name="nome" value="<%= user.name %>" /></div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label col-form-label-sm">Email</label>
                    <div class="col-sm-9"><input class="form-control" id="email-tf" type="email" name="email" value="<%= user.email %>" /></div>
                </div>
                <!-- <div class="form-group row margin-zero">
                    <label class="col-sm-3 col-form-label col-form-label-sm">Localização</label>
                    <div class="col-sm-9">
                      <select class="custom-select" id="country-list" name="country">
                        <% // countries.forEach(element => { %>
                            <option><%= // element.name; %></option>
                        <% // }) %>
                      </select>
                    </div>
                </div> -->
                <hr/>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label col-form-label-sm">Login</label>
                    <div class="col-sm-9"><input class="form-control disabled" id="user-tf" type="text" name="login" value="<%= user.user%>" /></div>
                </div>
                <div class="form-group row margin-zero">
                    <label class="col-sm-3 col-form-label col-form-label-sm">Senha</label>
                    <div class="col-sm-9"><input class="form-control" id="pass-tf" type="password" name="password" value="" /></div>
                </div>
                <hr />
                <div class="form-buttons">
                    <button class="btn btn-outline-dark" type="button" id="account-form-btn1">Cancelar</button>
                    <button class="btn btn-primary" type="submit" id="account-form-btn2">Enviar</button>
                </div>
            </form>
        </div>
        <% include partials/alert %>

        <script src="/js/views/signup.js"></script>
        <script src="/js/controllers/signupController.js"></script>
        <script src="/js/form-validators/accountValidator.js"></script>
        <% include partials/script %> 
    </body>
</html>
