<% user = udata %>
<!-- TODO: Tratamento de erro caso não encontre o objeto udata -->

<!-- header -->
<header id="header" class="painel-header" role="menu">
  <!-- navbar header -->
  <nav class="navbar navbar-expand-md p-0">
    <a class="brand painel-brand" href="/home">
        <i class="fas fa-columns"></i>
        Painel.io
    </a>
    <div>
        <button id="sidebarMovement" class="btn-painel navbar-toggler text-light">
            <i class="fas fa-bars"></i>
        </button>
        <button class="btn-painel navbar-toggler text-light" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <i class="fas fa-search"></i>
        </button>
    </div>

    <div id="navbarSupportedContent" class="collapse navbar-collapse">
        <button id="sidebarCollapse" class="btn-painel painel-hidden-md" >
            <i class="fa fa-dedent fa-fw text"></i>
        </button>
        
        <form class="form-inline painel-header-form">
            <div class="input-group search-form">
                <input class="form-control mr-sm-2" type="search" placeholder="Pesquisar projetos ..." aria-label="Search">
                <button class="search-btn"><i class="fas fa-search"></i></button>
            </div>
        </form>
    </div>
    <div class="painel-hidden-md">
      <ul class="navbar-nav m-0">
        <li class="nav-item position-relative">
            <button class="btn-painel dropdown" type="button" id="dropdownNotification" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="far fa-bell"></i>
                <span class="badge-danger">2</span>
            </button>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownNotification">
                <a class="dropdown-item" href="#">Notificação 1</a>
                <a class="dropdown-item" href="#">Notificação 2</a>
                <a class="dropdown-item" href="#">Notificação 3</a>
            </div>
        </li>
        <li class="nav-item position-relative">
            <button class="btn-painel dropdown-toggle profile-button" type="button" id="dropdownProfile" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <span class="painel-hidden-md"><%= user.name %></span>
                <span class="painel-avatar pull-right">
                    <img src="/images/a0.jpg" alt="foto-de-perfil">
                    <i class="on md b-white bottom"></i>
                </span>
            </button>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownProfile">
                <a class="dropdown-item" href="/atualizar-perfil">Perfil</a>
                <button class="dropdown-item" id="btn-logout">Logout</button>
            </div>
        </li>
      </ul>
    </div>
  </nav>
  <!-- / navbar header -->
</header>